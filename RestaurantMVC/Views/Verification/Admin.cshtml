@model IEnumerable<Domain.Models.Restaurant>

@{
    ViewData["Title"] = "Verify Restaurants";
    var hasItems = Model != null && Model.Any();
}

<h2>Verify Restaurants</h2>

@if (!hasItems)
{
    <p>No pending restaurants.</p>
}
else
{
    <form asp-action="ApproveRestaurants" method="post">
        @Html.AntiForgeryToken()

        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Owner Email</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedRestaurantIds" value="@r.Id" />
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(r.ImagePath))
                            {
                                <img src="@r.ImagePath" alt="@r.Name" style="max-height:80px;" />
                            }
                        </td>
                        <td>@r.Name</td>
                        <td>@r.OwnerEmailAddress</td>
                        <td>@r.Status</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">Approve selected restaurants</button>
    </form>
}
