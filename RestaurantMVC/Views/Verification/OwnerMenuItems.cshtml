@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Pending Menu Items";
}

<h2>Pending Menu Items</h2>

@if (!Model.Any())
{
        <p>No pending menu items for this restaurant.</p>
}
else
{
        <form asp-action="Approve" method="post">
            <input type="hidden" name="itemType" value="menuItem" />

            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var m in Model)
                {
                        <tr>
                            <td>
                                <input type="checkbox" name="menuItemIds" value="@m.Id" />
                            </td>
                            <td>@m.Title</td>
                            <td>@m.Price</td>
                            <td>@m.Status</td>
                        </tr>
                }
                </tbody>
            </table>

            <button type="submit" class="btn btn-success">Approve selected</button>
        </form>
}
