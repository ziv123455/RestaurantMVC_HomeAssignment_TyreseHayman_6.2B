@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Verify Menu Items";
    var hasItems = Model != null && Model.Any();
}

<h2>Verify Menu Items</h2>

@if (!hasItems)
{
    <p>No pending menu items.</p>
}
else
{
    <form asp-action="ApproveMenuItems" method="post">
        @Html.AntiForgeryToken()

        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Restaurant</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedMenuItemIds" value="@m.Id" />
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(m.ImagePath))
                            {
                                <img src="@m.ImagePath" alt="@m.Title" style="max-height:80px;" />
                            }
                        </td>
                        <td>@m.Title</td>
                        <td>@m.Price</td>
                        <td>@m.Restaurant?.Name</td>
                        <td>@m.Status</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">Approve selected menu items</button>
    </form>
}
